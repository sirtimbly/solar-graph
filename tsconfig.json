/**
 * Reference: https://aka.ms/tsconfig
 *
 * NOTE: The TypeScript compiler options are an unchanged copy of what Vite
 * gives us. No 'custom' shenanigans here. We  are not that special ❄️
 */

{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },

  "references": [{ "path": "./tsconfig.node.json" }]
}
